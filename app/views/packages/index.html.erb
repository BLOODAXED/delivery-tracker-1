<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_package" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="expected_box">
          Supposed to arrive on
        </label>

        <input type="date" id="expected_box" name="query_expected">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details">
        </textarea>
      </div>
      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div class="waiting_on">
    <h2>Waiting on</h2>
    <ul>
      <% @list_of_packages.each do |a_package| %>
      <% if a_package.status == false %>
      <li>

        <div>
          <%= a_package.description %>
        </div>

        <div>
          Supposed to arrive on <%= a_package.expected %>
        </div>

        <div>
          <%= a_package.details %>
        </div>

        <div>
          <form action="/modify_package/<%= a_package.id %>" method="post">
            <input type="hidden" name="status" value="true">

            <button>Mark as received</button>
          </form>
        </div>
      </tr>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>

<hr>

<div>
  <div class="received">
    <h2>Received</h2>
    <ul>
      <% @list_of_packages.each do |a_package| %>
      <% if a_package.status == true %>
      <li>

        <div>
          <%= a_package.description %>
        </div>

        <div>
          <small>
            <a href="/delete_package/<%= a_package.id %>">Delete</a>
          </small>
        </div>
      </tr>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>
